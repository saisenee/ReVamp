generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  price       Float
  currency    String?  @default("USD")
  shipping    Float?
  shippingType String? @default("domestic")
  images      String[]
  status      String?  @default("active")
  categories  String[]
  variations  Json?    // Store variation groups as JSON
  ownerId     String?  @db.ObjectId
  owner       User?    @relation(fields: [ownerId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model User {
  id       String    @id @default(auto()) @map("_id") @db.ObjectId
  sub      String    @unique
  email    String?
  name     String?
  picture  String?
  products Product[]
}
